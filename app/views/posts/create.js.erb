<% if @post.errors.present? %>
  <% @post.errors.messages.each do |key, val| %>
    var e = '#' + '<%= key.to_s %>'
    debugger
    $(e).notify(
      '<%= val.join(',') %>', 
      { position:"right" }
    );
  <% end %>
<% else %>
  $.notify("Your message is saved!", "success");
  $(":input:not(input[type=submit], select)").val("");
  $('#recipient')[0].selectedIndex = 0;
<% end %>